<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price, :precision => (@product.price.round == @product.price) ? 0 : 2) %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>/10
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<p>
  <%= image_tag @product.image, size: 200 %>
</p>

<% if can? :update, @product %>
  <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-warning btn-sm" %> |
  <%= link_to 'Back', products_path, class: "btn btn-primary btn-sm" %>
<% end %>
